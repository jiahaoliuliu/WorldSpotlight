<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/favourite_video_list_item_height">

    <ImageView
        android:id="@+id/video_preview_image_view"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        />

    <ImageView
        android:id="@+id/video_preview_error_image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/favourites_empty_star"
        android:background="@color/primary"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/video_title_text_view"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        style="?android:attr/textAppearanceMedium"
        android:textColor="@android:color/white"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/favourite_video_list_item_left_margin"
        android:layout_marginBottom="@dimen/favourite_video_list_item_bottom_margin"
        android:singleLine="true"
        android:maxLines="1"
        android:ellipsize="marquee"
        android:textStyle="bold"
        />
</RelativeLayout>
