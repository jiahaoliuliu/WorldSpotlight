<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.worldspotlightapp.android.ui.AddAVideoActivity">

    <fragment
        android:id="@+id/map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.google.android.gms.maps.SupportMapFragment"
        app:cameraZoom="6"
        app:cameraTargetLat="25.271139"
        app:cameraTargetLng="55.307485"
        />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_add_a_video_location"
        android:paddingBottom="@dimen/add_a_video_tutorial_activity_mark_padding_bottom"
        />

</RelativeLayout>
