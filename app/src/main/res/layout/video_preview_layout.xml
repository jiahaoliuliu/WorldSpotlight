<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/video_preview_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/main_activity_video_preview_margin"
    android:background="@android:color/white"
    >

    <ImageView
        android:id="@+id/thumbnail_image_view"
        android:layout_height="80dp"
        android:layout_width="145dp"
        android:src="@drawable/ic_default_maps_marker"
        />

    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thumbnail_image_view"
        android:textSize="@dimen/main_activity_video_preview_title_size"
        android:layout_toRightOf="@+id/thumbnail_image_view"
        android:layout_marginLeft="@dimen/main_activity_video_preview_horizontal_margin"
        android:maxLines="1"
        />

    <!-- Description might only for Tablets -->
    <TextView
        android:id="@+id/description_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/thumbnail_image_view"
        android:layout_alignBottom="@+id/thumbnail_image_view"
        android:maxLines="3"
        android:layout_alignLeft="@+id/title_text_view"
        />
</RelativeLayout>
