<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/video_preview_relative_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/main_activity_video_preview_margin"
    android:paddingBottom="@dimen/main_activity_video_preview_margin"
    android:background="@android:color/white"
    >

    <ImageView
        android:id="@+id/thumbnail_image_view"
        android:layout_height="@dimen/main_activity_video_preview_image_height"
        android:layout_width="@dimen/main_activity_video_preview_image_width"
        android:src="@drawable/ic_default_maps_marker"
        android:layout_marginLeft="@dimen/main_activity_video_preview_margin"
        />

    <TextView
        android:id="@+id/title_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thumbnail_image_view"
        android:textSize="@dimen/main_activity_video_preview_title_size"
        android:layout_toRightOf="@+id/thumbnail_image_view"
        android:layout_marginLeft="@dimen/main_activity_video_preview_horizontal_margin"
        android:maxLines="1"
        android:paddingRight="@dimen/main_activity_video_preview_margin"
        />

    <TextView
        android:id="@+id/description_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/thumbnail_image_view"
        android:layout_alignBottom="@+id/thumbnail_image_view"
        android:maxLines="3"
        android:layout_alignLeft="@+id/title_text_view"
        android:paddingRight="@dimen/main_activity_video_preview_margin"
        />

    <ImageView
        android:id="@+id/left_arrow_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_video_preview_to_left"
        />

    <ImageView
        android:id="@+id/right_arrow_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_video_preview_to_right"
        />

</RelativeLayout>
