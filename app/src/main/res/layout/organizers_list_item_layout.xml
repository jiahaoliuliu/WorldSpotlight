<?xml version="1.0" encoding="utf-8"?>
<!-- A CardView that contains the layout for the organizers -->
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/organizer_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="@dimen/card_view_card_corner_radius"
    card_view:cardElevation="@dimen/card_view_card_elevation"
    android:layout_marginTop="@dimen/organizers_list_group_margin_vertical"
    android:layout_marginBottom="@dimen/organizers_list_group_margin_vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/card_view_inside_padding"
        >
        <include
            android:padding="@dimen/card_view_inside_padding"
            layout="@layout/organizer_layout"
            />
    </LinearLayout>
</android.support.v7.widget.CardView>