<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.worldspotlightapp.android.ui.AddAVideoTutorialActivity">

    <CheckBox
        android:id="@+id/disable_me_check_box"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="@string/add_a_video_tutorial_activity_not_show_message"
        android:gravity="center"
        android:layout_above="@+id/launch_youtube_button"
        />

    <com.github.snuffix.android.material.RippleButton
        android:id="@+id/launch_youtube_button"
        android:layout_alignParentBottom="true"
        style="@style/WorldSpotlightButton"
        android:text="@string/add_a_video_tutorial_activity_launch_youtube"
        />
</RelativeLayout>
