<resources>

    <!-- Base application theme. -->
    <style name="Indigo" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <!-- Indigo -->
    <color name="primary">#3F51B5</color>
    <color name="primary_dark">#303F9F</color>
    <color name="accent">#FF4081</color>
    <color name="text_primary">#D9FFFFFF</color>
    <color name="text_secondary">#D9000000</color>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <!-- Indigo without actionbar when toolbar is used -->
    <style name="IndigoWithoutActionBar" parent="Indigo">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Login screen -->
    <style name="LoginButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:maxWidth">@dimen/login_activity_button_max_width</item>
        <item name="android:layout_height">@dimen/login_activity_button_height</item>
        <item name="android:maxHeight">@dimen/login_activity_button_height</item>
    </style>

    <!--    Login button with a drawable on the left -->
    <style name="LoginButtonWithDrawableOnLeft" parent="LoginButton">
        <item name="android:drawablePadding">2dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">26dp</item>
    </style>

    <!--    Facebook Sign in button -->
    <style name="FacebookLoginButton" parent="LoginButtonWithDrawableOnLeft">
        <item name="android:background">@color/login_activity_facebook_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:text">@string/login_activity_sign_in_with_facebook</item>
        <item name="android:drawableLeft">@drawable/login_facebook_logo</item>
    </style>

    <!--    Google Sign in button -->
    <style name="GooglePlusLoginButton" parent="LoginButtonWithDrawableOnLeft">
        <item name="android:background">@color/login_activity_google_plus_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:text">@string/login_activity_sign_in_with_google_plus</item>
        <item name="android:drawableLeft">@drawable/login_google_plus_logo</item>
    </style>

    <style name="SkipButton" parent="LoginButton">
        <item name="android:background">@color/login_activity_skip_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:text">@string/login_activity_skip</item>
    </style>
</resources>
