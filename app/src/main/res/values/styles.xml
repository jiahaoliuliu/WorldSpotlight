<resources>

    <!-- Base application theme. -->
    <style name="Indigo" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <!-- Indigo -->
    <color name="primary">#3F51B5</color>
    <color name="primary_dark">#303F9F</color>
    <color name="accent">#FF4081</color>
    <color name="text_primary">#D9FFFFFF</color>
    <color name="text_secondary">#D9000000</color>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <!-- Indigo without actionbar when toolbar is used -->
    <style name="IndigoWithoutActionBar" parent="Indigo">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Sign Up Login screen -->
    <style name="SignUpLoginElement">
        <item name="android:layout_width">match_parent</item>
        <item name="android:maxWidth">@dimen/sign_up_login_activity_element_max_width</item>
        <item name="android:layout_height">@dimen/sign_up_login_activity_element_height</item>
        <item name="android:maxHeight">@dimen/sign_up_login_activity_element_height</item>
        <item name="android:radius">@dimen/sign_up_login_activity_element_radius</item>
    </style>

    <!--    Login button with a drawable on the left -->
    <style name="SignUpLoginButtonWithDrawableOnLeft" parent="SignUpLoginElement">
        <item name="android:drawablePadding">2dp</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">26dp</item>
    </style>

    <!--    Facebook Sign in button -->
    <style name="FacebookLoginButton" parent="SignUpLoginButtonWithDrawableOnLeft">
        <item name="android:background">@drawable/sign_up_login_activity_facebook_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:text">@string/sign_up_login_activity_sign_in_with_facebook</item>
        <item name="android:drawableLeft">@drawable/sign_up_login_facebook_logo</item>
    </style>

    <!--    Google Sign in button -->
    <style name="GooglePlusLoginButton" parent="SignUpLoginButtonWithDrawableOnLeft">
        <item name="android:background">@drawable/sign_up_login_activity_google_plus_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:text">@string/sign_up_login_activity_sign_in_with_google_plus</item>
        <item name="android:drawableLeft">@drawable/sign_up_login_google_plus_logo</item>
    </style>

    <!--    Sign up or login button -->
    <style name="SignUpOrLoginButton" parent="SignUpLoginElement">
        <item name="android:background">@drawable/sign_up_login_activity_sign_up_and_log_in_background</item>
        <item name="android:textColor">@android:color/white</item>
    </style>


    <!--    Sign up or login editText -->
    <style name="SignUpOrLoginEditText" parent="SignUpLoginElement">
        <item name="android:background">@drawable/sign_up_login_activity_edit_text_background</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">start</item>
    </style>

    <!--    Sign up or login editText email -->
    <style name="SignUpOrLoginEMailEditText" parent="SignUpOrLoginEditText">
        <item name="android:hint">@string/sign_up_activity_email_hint</item>
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <!--    Sign up or login editText password -->
    <style name="SignUpOrLoginPasswordEditText" parent="SignUpOrLoginEditText">
        <item name="android:hint">@string/sign_up_activity_password_hint</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <!--    Sign up or login editText verify password -->
    <style name="SignUpOrLoginVerifyPasswordEditText" parent="SignUpOrLoginPasswordEditText">
        <item name="android:hint">@string/sign_up_activity_verify_password_hint</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <!--    Normal button -->
    <style name="WorldSpotlightButton" parent="SignUpLoginElement">
        <item name="android:background">@drawable/sign_up_login_activity_skip_background</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

</resources>
